generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id             Int              @id @default(autoincrement())
  createdAt      DateTime         @default(now()) @db.Date
  name           String
  userId         String
  icon           String
  type           TransactionType
  categoryBudget CategoryBudget[]

  @@unique([name, userId, type])
}

enum TransactionType {
  income
  expense
}

model Transaction {
  id               String          @id @default(uuid())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  amount           Decimal
  description      String
  date             DateTime        @db.Date
  userId           String
  type             TransactionType
  categoryBudgetId Int
  categoryBudget   CategoryBudget  @relation(fields: [categoryBudgetId], references: [id])
  fundId           Int
  fund             Fund            @relation(fields: [fundId], references: [id])
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Decimal
  expense Decimal

  @@id([day, month, year, userId])
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Decimal
  expense Decimal

  @@id([month, year, userId])
}

model Fund {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  budgets      FundBudget[]
  transactions Transaction[]
}

model FundBudget {
  id           Int      @id @default(autoincrement())
  fundId       Int
  createdDate  DateTime @default(now()) @db.Date
  updatedDate  DateTime @default(now()) @db.Date
  targetAmount Decimal  @default(0)
  budgetAmount Decimal  @default(0)

  fund Fund @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index(fundId)
}

model CategoryBudget {
  id           Int      @id @default(autoincrement())
  categoryId   Int
  createdDate  DateTime @default(now()) @db.Date
  updatedDate  DateTime @default(now()) @db.Date
  budgetAmount Decimal  @default(0)
  actualAmount Decimal  @default(0)

  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index(categoryId)
}

model UserSettings {
  userId   String @id
  currency String
}
